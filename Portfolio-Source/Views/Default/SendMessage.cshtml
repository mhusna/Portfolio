@using EntityLayer.Concrete;
@model Message

<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">

        <form asp-controller="Default" asp-action="SendMessage" method="post">

            <div class="form-group my-2">
                <label asp-for="Name" class="form-label fw-bolder">İsim</label>
                <input class="form-control" type="text" asp-for="Name" required>
            </div>

            <div class="form-group my-2">
                <label asp-for="Mail" class="form-label fw-bolder">Email</label>
                <input class="form-control" type="email" asp-for="Mail" required>
            </div>

            <div class="form-group my-2">
                <label asp-for="Content" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" style="resize: none;" asp-for="Content" rows="4" required></textarea>
            </div>

            <button class="btn btn-primary mt-2" type="submit">Gönder</button>

        </form>

    </div>
</div>