@using EntityLayer.Concrete
@model List<Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Header</th>
                            <th>Name</th>
                            <th>Title</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Header</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td><a href="/Feature/EditFeature/@item.Id" class="btn btn-inverse-warning btn-fw">Edit</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>