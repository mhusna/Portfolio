@using EntityLayer.Concrete
@model List<Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card">

            <div class="card-header border-0">
                <h3 class="mb-0">Feature List</h3>
            </div>

            <div class="table-responsive">
                <table class="table align-items-center table-flush">

                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Header</th>
                            <th scope="col">Name</th>
                            <th scope="col">Title</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Header</th>
                                <th>@item.Name</th>
                                <th>@item.Title</th>
                                <th><a href="/Feature/DeleteFeature/@item.Id" class="btn btn-danger">Delete</a></th>
                                <th><a href="/Feature/EditFeature/@item.Id" class="btn btn-info">Edit</a></th>

                            </tr>
                        }
                    </tbody>
                </table>
                <div class="col-3 center"><a href="/Feature/AddFeature/" class="btn btn-primary">New Feature</a></div>

            </div>
        </div>
    </div>
</div>