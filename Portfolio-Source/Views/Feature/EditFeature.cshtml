@using EntityLayer.Concrete
@model Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col">
            <div class="card">

                <div class="card-header border-0">
                    <h3 class="mb-0">Feature Informations</h3>
                </div>

                <form asp-controller="Feature" asp-action="EditFeature" method="post">

                    <div class="mb-3 col-9 center">
                        <label class="form-label" asp-for="Header">Header</label>
                        <input class="form-control" asp-for="Header" value="@Model.Header">
                        <span class="text-danger" asp-validation-for="Header"></span>
                    </div>
                    <br />

                    <div class="mb-3 col-9 center">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input class="form-control" asp-for="Name" value="@Model.Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <br />

                    <div class="mb-3 col-9 center">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input class="form-control" asp-for="Title" value="@Model.Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="col-3 center"><button class="btn btn-primary">Edit</button></div>
                </form>
            </div>
        </div>
    </div>
</div>