@using EntityLayer.Concrete
@model Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" asp-controller="Experience" asp-action="EditExperience" method="post">

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" value="@Model.Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input class="form-control" asp-for="Date" value="@Model.Date">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="form-label">Image</label>
                    <input class="form-control" asp-for="ImageUrl" value="@Model.ImageUrl">
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4" value="@Model.Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <button type="submit" class="btn btn-inverse-primary btn-fw">Submit</button>
                <a href="/Experience/Index/" class="btn btn-inverse-danger btn-fw">Cancel</a>
            </form>
        </div>
    </div>
</div>