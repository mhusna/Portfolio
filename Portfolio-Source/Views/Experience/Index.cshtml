@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experience List</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td style="white-space:pre-line; text-anchor:start; text-align:center">@item.Description</td>
                                <td style="border-image:auto; image-resolution:snap; filter: brightness(0) invert(1);"><img src="@item.ImageUrl"></td>
                                <td><a href="/Experience/DeleteExperience/@item.Id" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Experience/EditExperience/@item.Id" class="btn btn-warning">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />

                <a href="/Experience/AddExperience/" class="btn btn-primary">New Experience</a>
            </div>
        </div>
    </div>
</div>