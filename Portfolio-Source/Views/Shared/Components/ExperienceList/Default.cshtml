@using EntityLayer.Concrete
@model List<Experience>

<div class="section px-3 px-lg-4 pt-5" id="experience">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Deneyimler</h2>
        </div>
        <div class="row">
            @{var delayRight = 100; var delayLeft = 300;}
            @for(int i = 0; i < Model.Count; i++)
            {
                if(i % 2 == 0)
                {
                    <div class="col-md-6">
                        <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
                            <div class="card-header px-3 py-2">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h3 class="h5 mb-1">@Model[i].Name</h3>
                                        <div class="text-muted text-small">@Model[i].Date.Split(" ")[0] <small>@Model[i].Date.Split(" ")[1]</small></div>
                                    </div><img src="@Model[i].ImageUrl" width="48" height="48" alt="ui-ux" />
                                </div>
                            </div>
                            <div class="card-body px-3 py-2">
                                <p>@Model[i].Description</p>
                            </div>
                        </div>
                    </div>

                    delayRight += 100;
                }

                else
                {
                    <div class="col-md-6">
                        <div class="card mb-3" data-aos="fade-left" data-aos-delay="300">
                            <div class="card-header px-3 py-2">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h3 class="h5 mb-1">@Model[i].Name</h3>
                                        <div class="text-muted text-small">@Model[i].Date.Split(" ")[0] <small>@Model[i].Date.Split(" ")[1]</small></div>
                                    </div><img src="@Model[i].ImageUrl" width="48" height="48" alt="app development" />
                                </div>
                            </div>
                            <div class="card-body px-3 py-2">
                                <p>@Model[i].Description</p>
                            </div>
                        </div>
                    </div>

                    delayLeft += 100;
                }
            }
        </div>
    </div>
</div>