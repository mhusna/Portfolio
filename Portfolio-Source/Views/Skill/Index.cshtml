@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Value</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>
                                    <span class="completion mr-2">@item.Value%</span>
                                    <div>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/Skill/DeleteSkill/@item.Id" class="btn btn-inverse-danger btn-fw">Delete</a></td>
                                <td><a href="/Skill/EditSkill/@item.Id" class="btn btn-inverse-warning btn-fw">Edit</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />

                <a href="/Skill/AddSkill/" class="btn btn-inverse-primary btn-fw">New Skill</a>
            </div>

        </div>
    </div>
</div>