@using EntityLayer.Concrete
@model Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col">
            <div class="card">

                <div class="card-header border-0">
                    <h3 class="mb-0">Skill List</h3>
                </div>

                <form asp-controller="Skill" asp-action="AddSkill" method="post">

                    <div class="mb-3 col-9 center" class="center">
                        <label class="form-label" asp-for="Title">Title</label>
                        <input class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <br />

                    <div class="mb-3 col-9 center">
                        <label asp-for="Value" class="form-label">Value</label>
                        <input class="form-control" type="number" asp-for="Value">
                        <span class="text-danger" asp-validation-for="Value"></span>
                    </div>

                    <div class="col-3 center"><button class="btn btn-primary">Add A Skill</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

