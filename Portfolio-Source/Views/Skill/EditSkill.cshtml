@using EntityLayer.Concrete
@model Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" asp-controller="Skill" asp-action="EditSkill" method="post">

                <div class="form-group" class="center">
                    <label class="form-label" asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" value="@Model.Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Value" class="form-label">Value</label>
                    <input class="form-control" type="number" asp-for="Value" value="@Model.Value">
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <br />

                <button type="submit" class="btn btn-inverse-primary btn-fw">Submit</button>
                <a href="/Skill/Index/" class="btn btn-inverse-danger btn-fw">Cancel</a>
            </form>
        </div>
    </div>
</div>