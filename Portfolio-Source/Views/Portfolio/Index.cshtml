@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col">
        <div class="card">

            <div class="card-header border-0">
                <h3 class="mb-0">Portfolio List</h3>
            </div>

            <div class="table-responsive">
                <table class="table align-items-center table-flush">

                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Project Url</th>
                            <th scope="col">Full Image Url</th>
                            <th scope="col">Short Image Url</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Name</th>
                                <th>@item.ProjectUrl</th>
                                <th>@item.ImageFullUrl</th>
                                <th>@item.ImageShortUrl</th>
                                <th><a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-danger">Delete</a></th>
                                <th><a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-info">Edit</a></th>

                            </tr>
                        }
                    </tbody>
                </table>
                <div class="col-3 center"><a href="/Portfolio/AddPortfolio/" class="btn btn-primary">New Portfolio</a></div>

            </div>
        </div>
    </div>
</div>