@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Project Url</th>
                            <th>Full Image Url</th>
                            <th>Short Image Url</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.ProjectUrl</td>
                                <td><img src="@item.ImageFullUrl"></td>
                                <td><img src="@item.ImageShortUrl"></td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-inverse-danger btn-fw">Delete</a></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-inverse-warning btn-fw">Edit</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>