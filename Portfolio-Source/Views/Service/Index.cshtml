@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoronaAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Image Url</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td style="border-image:auto; image-resolution:snap; filter: brightness(0) invert(1);"><img src="@item.ImageUrl"></td>
                                <td><a href="/Service/DeleteService/@item.Id" class="btn btn-inverse-danger btn-fw">Delete</a></td>
                                <td><a href="/Service/EditService/@item.Id" class="btn btn-inverse-warning btn-fw">Edit</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />

                <a href="/Service/AddService/" class="btn btn-inverse-primary btn-fw">New Service</a>
            </div>

        </div>
    </div>
</div>