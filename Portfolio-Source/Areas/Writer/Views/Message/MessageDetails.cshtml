@using Portfolio_Source.Areas.Writer.Models
@model SenderReceiverViewModel

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="card col-12 mx-auto">

    @foreach(var sent in Model.SentMessages)
    {

        foreach(var received in Model.ReceivedMessages)
        {
            if(sent.Date > received.Date)
            {
                <div class="chat-message-right pb-4">
                    <div class="text-muted small text-nowrap mt-2">@sent.Date.ToString("hh:mm tt")</div>
                    <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
                        <div class="font-weight-bold mb-1">@sent.SenderName</div>
                        @sent.MessageContent
                    </div>
                </div>
            }
            else
            {
                <div class="chat-message-left pb-4">
                    <div class="text-muted small text-nowrap mt-2">@received.Date.ToString("hh:mm tt")</div>
                    <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
                        <div class="font-weight-bold mb-1">@received.SenderName</div>
                        @received.MessageContent
                    </div>
                </div>
            }
        }
    }

    <div class="flex-grow-0 py-3 px-4 border-top">
        <div class="input-group">
            <input type="text" class="form-control mr-2" placeholder="Mesajını yaz...">
            <button class="btn btn-primary ml-2">Send</button>
        </div>
    </div>

</div>