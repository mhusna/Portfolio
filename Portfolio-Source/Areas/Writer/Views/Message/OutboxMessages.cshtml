@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "OutboxMessages";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Outbox</h4>

            <div class="table-responsive">
                <table class="table table-hover" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Date</th>
                            <th>Receiver</th>
                            <th>Subject</th>
                            <th>Content</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Date.ToShortDateString()</th>
                                <td>@item.Receiver</td>
                                <td>@item.Subject</td>
                                <td>@item.MessageContent</td>
                                <td><a href="/Writer/Message/MessageDetails/@item.Id" class="btn btn-outline-primary">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>